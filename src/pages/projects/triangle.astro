    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .project-header {
    padding: 2rem 0;
    text-align: center;
  }

  .project-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(to right, var(--accent-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .description {
    font-size: 1.1rem;
    color: #b0b0c0;
    max-width: 700px;
    margin: 0 auto 1.5rem;
    line-height: 1.6;
  }

