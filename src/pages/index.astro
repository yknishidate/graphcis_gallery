---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// プロジェクトページを動的にインポート
const projectFiles = import.meta.glob('./projects/*.astro');

// プロジェクト情報の型定義
interface ProjectInfo {
  title: string;
  description: string;
  script: string;
  date: string;
}

// モジュールの型定義
interface ProjectModule {
  projectInfo: ProjectInfo;
}

// プロジェクト情報を非同期に取得
const projects = await Promise.all(
  Object.entries(projectFiles).map(async ([path, importFn]) => {
    const module = await importFn() as ProjectModule;
    const match = path.match(/\/([^/]+)\.astro$/);
    const id = match ? match[1] : '';

    // プロジェクト情報を取得
    const projectInfo = module.projectInfo;

    return {
      ...projectInfo,
      id,
      thumbnail: `./images/${id}-thumbnail.png`
    };
  })
);

// プロジェクトを日付で古い順にソート
projects.sort((a, b) => {
  return new Date(a.date).getTime() - new Date(b.date).getTime();
});
---

<Layout>
  <div class="container">
    <section class="hero">
      <h1>WebGPU Demo Gallery</h1>
      <p class="subtitle">
        A collection of various graphics demos using WebGPU.
        Experience the power of the GPU in the latest web browsers.
      </p>
    </section>

    <section class="projects">
      <div class="project-grid">
        {projects.map(project => (
          <ProjectCard
            title={project.title}
            description={project.description}
            thumbnail={project.thumbnail}
            url={`./projects/${project.id}`}
          />
        ))}
      </div>
    </section>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero {
    text-align: center;
    padding: 3rem 0;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(to right, var(--accent-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #b0b0c0;
    line-height: 1.6;
  }

  .projects {
    padding: 2rem 0;
  }

  .projects h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .about {
    padding: 3rem 0;
    max-width: 800px;
    margin: 0 auto;
  }

  .about h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .about p {
    margin-bottom: 1.5rem;
    line-height: 1.6;
    color: #b0b0c0;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .project-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
