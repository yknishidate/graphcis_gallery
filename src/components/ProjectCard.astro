---
interface Props {
  title: string;
  description: string;
  thumbnail: string;
  url: string;
}

const { title, description, thumbnail, url } = Astro.props;
---

<a href={url} class="project-card">
  <div class="thumbnail">
    <img src={thumbnail} alt={title} />
  </div>
  <div class="content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</a>

<style>
  .project-card {
    display: block;
    background-color: rgba(30, 30, 40, 0.7);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .thumbnail {
    width: 100%;
    height: 180px;
    overflow: hidden;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .thumbnail img {
    transform: scale(1.05);
  }

  .content {
    padding: 1.5rem;
  }

  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    color: #ffffff;
  }

  p {
    margin: 0;
    font-size: 0.9rem;
    color: #b0b0c0;
    line-height: 1.5;
  }
</style>
